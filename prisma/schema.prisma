datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model Category {
  id            Int        @id @default(autoincrement())
  slug          String     @unique @db.VarChar(255)
  title         String     @db.VarChar(255)
  description   String?    @db.VarChar(255)
  keywords      String?    @db.VarChar(255)
  rank          Int        @default(5000)
  parentId      Int?
  parent        Category?  @relation("Subcategory", fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  posts         Post[]
  subcategories Category[] @relation("Subcategory")
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  published     Boolean    @default(true)

  @@index([rank, createdAt])
  @@index([parentId])
}

model Post {
  id          Int      @id @default(autoincrement())
  slug        String   @unique @db.VarChar(255)
  title       String   @db.VarChar(255)
  description String?  @db.VarChar(255)
  keywords    String?  @db.VarChar(255)
  content     String   @db.Text
  rank        Int      @default(5000)
  authorId    String   @db.VarChar(255)
  categoryId  Int
  category    Category @relation(fields: [categoryId], references: [id])
  writtenAt   DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  published   Boolean  @default(true)

  @@index([authorId])
  @@index([rank, writtenAt])
  @@index([categoryId])
}
